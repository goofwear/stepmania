<ActorFrame> <children>
	<Layer File="../ScreenTitleMenu overlay" />

	<Layer
		File="pay"
		OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y-60;diffuseshift;effectcolor1,0.5,0.5,0.5,1;effectcolor2,1,1,1,1"
		Condition="GAMESTATE:GetCoinMode()==COIN_MODE_PAY"
	/>

	<Layer
		File="jp"
		Stretch="1"
		NumTilesHigh="1"
		TilesStartY="380"
		TilesSpacingY="10000"
		TileVelocityX="-300"
		OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y"
		Condition="GAMESTATE:GetPremium()==PREMIUM_JOINT"
	/>

	<Layer
		File="free"
		OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y-60;diffuseshift;effectcolor1,0.5,0.5,0.5,1;effectcolor2,1,1,1,1"
		Condition="GAMESTATE:GetCoinMode()==COIN_MODE_FREE"
	/>

	<Layer
		File="dp"
		Stretch="1"
		NumTilesHigh="1"
		TilesStartY="380"
		TilesSpacingY="10000"
		TileVelocityX="-300"
		OnCommand="x,SCREEN_CENTER_X;y,SCREEN_CENTER_Y"
		Condition="GAMESTATE:GetPremium()==PREMIUM_DOUBLE"
	/>
</children> </ActorFrame>
